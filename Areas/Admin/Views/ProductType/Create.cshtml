@model OnlineShop2.Models.ProductType
@{
    ViewData["Title"] = "Create";
}
<br />
<div class="row">
    <div class="col-10 offset-1">

<h2 class="text-info">Create Product Type</h2>

<form method="post" asp-action="Create">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductTypeName"></label>
            </div>
            <div class="col-9">
                <input asp-for="ProductTypeName" class="form-control" />
                <span asp-validation-for="ProductTypeName" class="text-danger"></span>
            </div>
            
        </div>
        <br/>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
 </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
