@model OnlineShop2.Models.Product
@{
    ViewData["Title"] = "Create";
}
<br />
<div class="row">
    <div class="col-10 offset-1">

        <h2 class="text-info">Add New Product</h2>

        <form method="post" asp-action="Create" enctype="multipart/form-data">
           
            <div class="p-4 rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ImageUrl"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="ImageUrl" class="form-control" type="file" name="imageFile" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ProductColor"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="ProductColor" class="form-control" />
                        <span asp-validation-for="ProductColor" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="ProductTypeId"></label>
                    </div>
                    <div class="col-9">
                        @*<input asp-for="ProductTypeId" class="form-control" />*@
                        <select asp-for="ProductTypeId" asp-items="ViewBag.TypeId" class="form-control"></select>
                        <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="SpecialTagId"></label>
                    </div>
                    <div class="col-9">
                        @*<input asp-for="SpecialTagId" class="form-control" />*@
                        <select asp-for="SpecialTagId" asp-items="ViewBag.TagId" class="form-control"></select>
                        <span asp-validation-for="SpecialTagId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="IsAvailable"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="IsAvailable"  type="checkbox" />
                        <span asp-validation-for="IsAvailable" class="text-danger"></span>
                    </div>
                </div>



                <br />
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
    }


