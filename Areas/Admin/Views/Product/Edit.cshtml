@model OnlineShop2.Models.Product
@{
    ViewData["Title"] = "Edit";
}
<br />
<div class="row">
    <div class="col-10 offset-1">

        <h2 class="text-info">Edit Product</h2>

        <form method="post" asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id"/>
            <div class="p-4 rounded border row bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="col-8">
                    <div class="form-group row pt-3">
                        <div class="col-4">
                            <label asp-for="Name"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row pt-3">
                        <div class="col-4">
                            <label asp-for="Price"></label>
                            
                        </div>
                        <div class="col-8">
                            <input asp-for="Price" class="form-control" />
                            
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row pt-3">
                        <div class="col-4">
                            <label asp-for="ImageUrl"></label>
                        </div>
                        <div class="col-8">
                            <input class="form-control" type="file" name="imageFile" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row pt-1">
                        <div class="col-4">
                            <label asp-for="ProductColor"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ProductColor" class="form-control" />
                            <span asp-validation-for="ProductColor" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row pt-3">
                        <div class="col-4">
                            <label asp-for="ProductTypeId"></label>
                            
                        </div>
                        <div class="col-8">
                           
                            <select asp-for="ProductTypeId" asp-items="ViewBag.TypeId" class="form-select"></select>
                            <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row pt-3">
                        <div class="col-4">
                            <label asp-for="SpecialTagId"></label>
                        </div>
                        <div class="col-8">
                           
                            <select asp-for="SpecialTagId" asp-items="ViewBag.TagId" class="form-select"></select>
                            <span asp-validation-for="SpecialTagId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row pt-1">
                        <div class="col-4">
                            <label asp-for="IsAvailable"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="IsAvailable" type="checkbox" />
                            <span asp-validation-for="IsAvailable" class="text-danger"></span>
                        </div>
                    </div>



                    <br />
                    <div class="form-group pt-3">
                        <input type="submit" class="btn btn-primary" value="Update" />

                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </div>
                </div>
                
                <div class="col-4">
                    <div>
                        <img src="~/@Model.ImageUrl" id="ImgPreview" width="100%" style="border-radius:10px; border:2px solid #000000" />
                    </div>
                    @*<div style="text-align:center">Image Preview</div>*@
                    <div class="text-center">Image Preview</div>
                </div>
 
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        //await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }

    <script>
        $(document).ready(() => {
            $("input[name='imageFile']").change(function () {
                const file = this.files[0];
                if (file) {
                    let reader = new FileReader();
                    reader.onload = function (event) {
                        $("#ImgPreview").attr("src", event.target.result);
                    };
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>

    }


